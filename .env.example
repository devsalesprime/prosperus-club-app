# Supabase Configuration
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Service Role Key (server-side only — NEVER expose in frontend)
# Required only for seed scripts (supabase/seed-admin.ts)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# HubSpot Integration
VITE_HUBSPOT_WEBHOOK_SECRET=your-hubspot-webhook-secret
HUBSPOT_API_KEY=your-hubspot-api-key

# Gallery URL
VITE_GALLERY_URL=https://photos.app.goo.gl/your-gallery

# Push Notifications - VAPID Keys
# Public Key (exposed in frontend via VITE_ prefix)
VITE_VAPID_PUBLIC_KEY=your-vapid-public-key

# Public Key (for Edge Functions — set via Supabase Secrets)
VAPID_PUBLIC_KEY=your-vapid-public-key

# Private Key (NEVER expose in frontend — set via Supabase Secrets only)
VAPID_PRIVATE_KEY=your-vapid-private-key
